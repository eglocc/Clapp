<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_horizontal_margin">

    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Prompt"
        android:textSize="@dimen/default_head_size"
        android:textStyle="bold"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/item_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_horizontal_margin"
        android:layout_below="@id/prompt_text"
        android:layout_above="@+id/add_panel" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_horizontal_margin"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Add item"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/add_button"
            app:layout_constraintEnd_toStartOf="@id/add_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/default_horizontal_margin"
            android:layout_marginEnd="@dimen/default_horizontal_margin" />

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/plus_box_outline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/input_field" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>