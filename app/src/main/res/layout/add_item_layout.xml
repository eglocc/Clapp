<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Prompt"
            android:textSize="@dimen/default_head_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/input_field"
            android:paddingTop="@dimen/default_horizontal_margin"
            android:paddingBottom="@dimen/default_vertical_margin" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prompt_text"
            app:layout_constraintBottom_toTopOf="@+id/contacts_recycler">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/contact_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_horizontal_margin"
                android:layout_marginRight="@dimen/default_horizontal_margin"
                android:drawableEnd="@drawable/magnify"
                android:drawableRight="@drawable/magnify"
                android:hint="@string/add_contact_label"
                android:textStyle="italic" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/contacts_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/input_field"
            app:layout_constraintBottom_toTopOf="@+id/add_button" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_horizontal_margin"
            android:layout_marginEnd="@dimen/default_horizontal_margin"
            app:fabSize="mini"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/plus_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

    </android.support.constraint.ConstraintLayout>

</layout>