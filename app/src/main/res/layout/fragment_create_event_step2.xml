<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/add_contacts_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="@dimen/default_horizontal_margin"
                android:paddingBottom="@dimen/default_horizontal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/chat_check_box" />


            <CheckBox
                android:id="@+id/chat_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/generate_chat"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_marginBottom="@dimen/default_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/add_contacts_container"
                app:layout_constraintBottom_toBottomOf="parent" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add_clapper_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_horizontal_margin"
                android:layout_marginEnd="@dimen/default_horizontal_margin"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/plus_white"
                app:fabSize="mini"
                app:layout_constraintTop_toTopOf="@id/chat_check_box"
                app:layout_constraintBottom_toBottomOf="@id/chat_check_box"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</layout>