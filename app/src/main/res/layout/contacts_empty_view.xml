<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/no_contacts_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_horizontal_margin">

        <TextView
            android:id="@+id/no_contacts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_head_size"
            tools:text="Empty view indicator!"
            app:layout_constraintTop_toBottomOf="@+id/no_contacts_alert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/no_contacts_alert"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/account_alert"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/no_contacts_text"
            app:layout_constraintStart_toStartOf="@id/no_contacts_text"
            app:layout_constraintEnd_toEndOf="@id/no_contacts_text" />

    </android.support.constraint.ConstraintLayout>
</layout>